<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.leaderkey.intellij.action-executor</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Action Executor for LeaderKey</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@leaderkey.com" url="https://github.com/arabshapt">LeaderKey</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Execute IntelliJ IDEA actions via URL schema from external applications like LeaderKey.app.<br>
    <br>
    Features:<br>
    <ul>
      <li>Execute any IntelliJ action by its ID via URL schema</li>
      <li>Chain multiple actions to execute sequentially</li>
      <li>REST API endpoint for external integration</li>
      <li>Works with LeaderKey.app for leader key sequences</li>
    </ul>
    <br>
    Usage:<br>
    <code>intellij-action://execute?action=ReformatCode</code><br>
    <code>intellij-action://execute?actions=SaveAll,OptimizeImports</code>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Register our REST service -->
        <httpRequestHandler implementation="com.leaderkey.intellij.ActionRestService"/>
        
        <!-- Register application services -->
        <applicationService serviceImplementation="com.leaderkey.intellij.ActionExecutorService"/>
        <applicationService serviceImplementation="com.leaderkey.intellij.CustomHttpServerService"/>
        
        <!-- Register startup activity for custom HTTP server -->
        <postStartupActivity implementation="com.leaderkey.intellij.PluginStartup"/>
    </extensions>

    <applicationListeners>
        <!-- Add listeners if needed -->
    </applicationListeners>
</idea-plugin>